<extension name="LeapTools" version="1">
    <author>Khesh Selvaganapathi</author>
    <description>
        A set of usability tools 
    </description>
    <guid>E5063606-F1CB-4DF6-8696-6FE3016E2FE6</guid>
    <script src="script.py" />

    <interface context="Mechanical">
        <toolbar name="LeapToolsMainToolBar" caption="Leap Tools">
            <entry name="ChangeNameButton" icon="analysisname" caption="Rename Analysis">
                <callbacks>
                    <onclick>ProjectSchematicNameToAnalysisName</onclick>
                </callbacks>
            </entry>
            <entry name="ChangeWBNameButton" icon="wbname" caption="Rename WB Systems">
                <callbacks>
                    <onclick>AnalysisNameToProjectSchematicName</onclick>
                </callbacks>
            </entry>
            <separator/>
            <entry name="DirectRpButton" icon="load" caption="Fresh Remote Point">
                <callbacks>
                    <onclick>CreateDirectRemotePoint</onclick>
                </callbacks>
            </entry>
        </toolbar>
    </interface>
    <simdata context="Mechanical">
        <object name="DirectRPContainer" version="1">
            <target type="DataModel" />
        </object>
        <object name="DirectRP" version="1">
            <callbacks>
                <getcommands location="pre">WriteRpInput</getcommands>
            </callbacks>
            <target type="userobject" name="DirectRPContainer" />
            <property name="Geometry" caption="Geometry" control="scoping">
                <attributes selection_filter="face|edge|vertex|node" />
            </property>
            <property name="Pilot" caption="Pilot Node" control="scoping">
                <attributes selection_filter="vertex|node" />
                <callbacks>
                    <isvalid>DirectRpScopingIsValid</isvalid>
                </callbacks>
            </property>
            <propertygroup name="DefPG" caption="Definition" display="caption">
                <property name="Behavior" caption="Behavior"
                          control="select" default="Deformable">
                    <attributes options="Deformable,Rigid" />
                </property>
                <propertygroup name="DOF Selection" caption="DOF Selection"
                               display="property" control="select"
                               default="All DoFs Active">
                    <attributes options="All DoFs Active,Manual" />
                    <property name="X" caption="X Component" control="select" default="Active"
                              visibleon="Manual">
                        <attributes options="Active,Inactive" />
                    </property>
                    <property name="Y" caption="Y Component" control="select" default="Active"
                              visibleon="Manual">
                        <attributes options="Active,Inactive" />
                    </property>
                    <property name="Z" caption="Z Component" control="select" default="Active"
                              visibleon="Manual">
                        <attributes options="Active,Inactive" />
                    </property>
                    <property name="ROTX" caption="Rotation X" control="select" default="Active"
                              visibleon="Manual">
                        <attributes options="Active,Inactive" />
                    </property>
                    <property name="ROTY" caption="Rotation Y" control="select" default="Active"
                              visibleon="Manual">
                        <attributes options="Active,Inactive" />
                    </property>
                    <property name="ROTZ" caption="Rotation Z" control="select" default="Active"
                              visibleon="Manual">
                        <attributes options="Active,Inactive" />
                    </property>
                </propertygroup>
            </propertygroup>
        </object>
    </simdata>
</extension>
